<!--<?xml version="1.0" encoding="UTF-8"?>-->

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.DashboardController"
            prefWidth="500" prefHeight="600"
            style="-fx-padding: 20; -fx-background-color: #f0f8ff;">
    <VBox spacing="15" alignment="CENTER">
        <Label text="Animal Shelter Dashboard" style="-fx-font-size: 22px; -fx-font-weight: bold;" />

        <Button text="Add Animal" onAction="#handleAddAnimal" prefWidth="200"/>
        <Button text="List Animals" onAction="#handleListAnimals" prefWidth="200"/>
        <Button text="Adopt Animal" onAction="#handleAdoptAnimal" prefWidth="200"/>
        <Button text="Search Animal" onAction="#handleSearchAnimal" prefWidth="200"/>
        <Button text="Remove Animal" onAction="#handleRemoveAnimal" prefWidth="200"/>
        <Button text="Sort Animals" onAction="#handleSortAnimals" prefWidth="200"/>
        <Button text="Register Volunteer" onAction="#handleRegisterVolunteer" prefWidth="200"/>
        <Button text="Add Task" onAction="#handleAddTask" prefWidth="200"/>


        <Separator prefWidth="220"/>

        <Button text="Exit" onAction="#handleExit" prefWidth="200" style="-fx-background-color: #ffdddd;" />
    </VBox>
</AnchorPane>
